{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "build",
    "target": "es6",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true
  },
  "exclude": ["jest.config.ts"]
}
